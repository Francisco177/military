<%- include('partials/header') %>

<h2>Request Military Leave</h2>

<% if (success) { %>
  <div style="background-color: #d4edda; color: #155724; padding: 1em; border-radius: 5px; margin-bottom: 1em;">
    âœ… Leave application submitted successfully!
  </div>
<% } %>

<form action="/leave" method="POST">
  <label for="fullName"><i class="fas fa-user"></i> Full Name:</label>
  <input type="text" id="fullName" name="fullName" required>

  <label for="officerName"><i class="fas fa-user-tie"></i> Officer's Name:</label>
  <input type="text" id="officerName" name="officerName" required>

  <label for="serviceNumber"><i class="fas fa-id-card"></i> Service Number:</label>
  <input type="text" id="serviceNumber" name="serviceNumber" required>

  <label for="relationship"><i class="fas fa-users"></i> Relationship with Personnel:</label>
  <input type="text" id="relationship" name="relationship" required>

  <label for="address"><i class="fas fa-home"></i> Address:</label>
  <input type="text" id="address" name="address" required>

  <label for="rank"><i class="fas fa-star"></i> Rank:</label>
  <select id="rank" name="rank" required>
    <option value="">Select Rank</option>
    <option value="Private">Private</option>
    <option value="Lance Corporal">Lance Corporal</option>
    <option value="Corporal">Corporal</option>
    <option value="Sergeant">Sergeant</option>
    <option value="Staff Sergeant">Staff Sergeant</option>
    <option value="Warrant Officer">Warrant Officer</option>
    <option value="Master Warrant Officer">Master Warrant Officer</option>
    <option value="2nd Lieutenant">2nd Lieutenant</option>
    <option value="Lieutenant">Lieutenant</option>
    <option value="Captain">Captain</option>
    <option value="Major">Major</option>
    <option value="Lt Colonel">Lt Colonel</option>
    <option value="Colonel">Colonel</option>
    <option value="Brig General">Brig General</option>
    <option value="Maj General">Maj General</option>
    <option value="Lt General">Lt General</option>
    <option value="General">General</option>
  </select>

  <label for="unit"><i class="fas fa-flag-usa"></i> Branch:</label>
  <input type="text" id="unit" name="unit" required>

  <label for="leaveType"><i class="fas fa-plane-departure"></i> Leave Type:</label>
  <select id="leaveType" name="leaveType" required>
    <option value="annual">Annual</option>
    <option value="emergency">Emergency</option>
    <option value="medical">Medical</option>
    <option value="other">Other</option>
  </select>

  <label for="startDate"><i class="fas fa-calendar-alt"></i> Leave Start Date:</label>
  <input type="date" id="startDate" name="startDate" required>

  <label for="endDate"><i class="fas fa-calendar-check"></i> Leave End Date:</label>
  <input type="date" id="endDate" name="endDate" required>

  <label for="reason"><i class="fas fa-pen"></i> Reason for Leave:</label>
  <textarea id="reason" name="reason" rows="4" required></textarea>

  <button type="submit"><i class="fas fa-paper-plane"></i> Submit Request</button>
</form>

<%- include('partials/footer') %>

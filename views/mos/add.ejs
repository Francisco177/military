<%- include('../partials/header') %>

<h1>Add New Soldier</h1>

<form action="/mos/admin/add" method="POST" enctype="multipart/form-data">
  <label>Name: <i class="fas fa-user"></i></label><br>
  <input type="text" name="name" required><br><br>

  <label>Age: <i class="fas fa-birthday-cake"></i></label><br>
  <input type="text" name="age" required><br><br>

  <label>Gender: <i class="fas fa-venus-mars"></i></label><br>
  <select name="gender" required>
    <option value="">Select Gender</option>
    <option value="Male">Male</option>
    <option value="Female">Female</option>
    <option value="Other">Other</option>
  </select><br><br>

  <label>Rank: <i class="fas fa-trophy"></i></label><br>
  <input type="text" name="rank" required><br><br>

  <label>Unit: <i class="fas fa-building"></i></label><br>
  <input type="text" name="unit" required><br><br>

  <label>MOS: <i class="fas fa-cogs"></i></label><br>
  <input type="text" name="mos" required><br><br>

  <label>Bio: <i class="fas fa-pencil-alt"></i></label><br>
  <textarea name="bio" rows="5" required></textarea><br><br>

  <label>Photo: <i class="fas fa-camera"></i></label><br>
  <input type="file" name="photo" accept="image/*" required><br><br>

  <button type="submit"><i class="fas fa-plus-circle"></i> Add Soldier</button>
</form>

<p><a href="/mos"><i class="fas fa-arrow-left"></i> Back to Soldier List</a></p>

<%- include('../partials/footer') %>

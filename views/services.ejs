<%- include('partials/header') %>

<!-- Hero Section -->
<section style="background-image: url('/images/services-hero.jpg'); background-size: cover; background-position: center; color: rgb(78, 71, 71); padding: 100px 20px; text-align: center;">
  <h1 style="font-size: 48px; font-weight: bold; text-shadow: 2px 2px 8px rgba(0,0,0,0.5);">
    <i class="fas fa-cogs"></i> Our Services
  </h1>
  <p style="font-size: 20px; max-width: 700px; margin: auto; text-shadow: 1px 1px 6px rgba(0,0,0,0.4);">
    Delivering expertise, strength, and strategic support tailored to mission success.
  </p>
</section>

<!-- Services Section -->
<section style="padding: 60px 20px; background-color: #f9f9f9;">
  <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 40px; text-align: center; max-width: 1000px; margin: auto;">
    
    <div style="flex: 1; min-width: 250px;">
      <i class="fas fa-chess-knight fa-3x" style="color: #3b5998;"></i>
      <h3 style="margin-top: 15px;">Defense Strategy Consulting</h3>
      <p>Expert insights and tactical planning for national and international defense operations.</p>
    </div>

    <div style="flex: 1; min-width: 250px;">
      <i class="fas fa-dumbbell fa-3x" style="color: #d9534f;"></i>
      <h3 style="margin-top: 15px;">Military Training Programs</h3>
      <p>Robust physical and technical training to enhance combat and field readiness.</p>
    </div>

    <div style="flex: 1; min-width: 250px;">
      <i class="fas fa-truck fa-3x" style="color: #5cb85c;"></i>
      <h3 style="margin-top: 15px;">Logistics & Support</h3>
      <p>Coordinated logistics, transport, and equipment management to ensure operational efficiency.</p>
    </div>
    
  </div>
</section>

<!-- Optional: Image Strip -->
<section style="display: flex; flex-wrap: wrap; justify-content: center; padding: 40px 20px; gap: 20px;">
  <img src="/images/service 1.jpg" alt="Consulting" style="width: 300px; border-radius: 8px;">
  <img src="/images/service 2.jpg" alt="Training" style="width: 300px; border-radius: 8px;">
  <img src="/images/image 3.jpg" alt="Logistics" style="width: 300px; border-radius: 8px;">
</section>

